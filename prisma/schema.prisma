generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Dokter {
  id        String    @id @default(uuid())
  email     String    @unique
  password  String
  sessions  Session[] // Tambahin ini buat hubungan ke Session
}


model Session {
  id        String   @id @default(uuid())
  token     String   @unique @default(uuid()) // Auto generate token
  dokter    Dokter   @relation(fields: [dokterId], references: [id])
  dokterId  String
  createdAt DateTime @default(now())
  expiresAt DateTime
}

